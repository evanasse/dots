layout {
    pane split_direction="vertical" {
        pane {
            name "ÔÅî"
        }
        pane {
            name "nvim"
            command "nu"
            args "-c" "nvim ($env.NVIM_ARGS | split row ' ')"
            size "64%"
            focus true
            close_on_exit true
        }
    }
}
ui {
    pane_frames {
        rounded_corners true
    }
}
keybinds clear-defaults=true {}
mouse_mode false
